<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- قواعد الأمان للطلاب في البورتال -->

        <!-- السماح للطالب برؤية بياناته فقط -->
        <record id="student_portal_rule" model="ir.rule">
            <field name="name">Student Portal: See own data</field>
            <field name="model_id" ref="model_quran_student"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- السماح للطالب برؤية صفوفه -->
        <record id="class_portal_rule" model="ir.rule">
            <field name="name">Student Portal: See own classes</field>
            <field name="model_id" ref="model_quran_class"/>
            <field name="domain_force">[('student_ids.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- السماح للطالب برؤية جلساته -->
        <record id="session_portal_rule" model="ir.rule">
            <field name="name">Student Portal: See own sessions</field>
            <field name="model_id" ref="model_quran_session"/>
            <field name="domain_force">[('class_id.student_ids.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- السماح للطالب برؤية سجلات حضوره -->
        <record id="attendance_portal_rule" model="ir.rule">
            <field name="name">Student Portal: See own attendance</field>
            <field name="model_id" ref="model_quran_session_attendance"/>
            <field name="domain_force">[('student_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
    </data>
</odoo>