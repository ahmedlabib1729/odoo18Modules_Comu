<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Enrollment Link Wizard Form View -->
    <record id="view_enrollment_link_wizard_form" model="ir.ui.view">
        <field name="name">quran.enrollment.link.wizard.form</field>
        <field name="model">quran.enrollment.link.wizard</field>
        <field name="arch" type="xml">
            <form string="ربط الطلب بطالب موجود">
                <div class="alert alert-warning" role="alert">
                    <h4 class="alert-heading">
                        <i class="fa fa-exclamation-triangle"></i> تنبيه: طالب موجود مسبقاً
                    </h4>
                    <field name="message" readonly="1" nolabel="1"/>
                </div>

                <group string="معلومات الطالب الموجود">
                    <group>
                        <field name="student_id" string="الطالب" readonly="1"/>
                        <field name="enrollment_id" string="طلب الالتحاق" readonly="1" invisible="1"/>
                    </group>
                </group>

                <div class="mt-3">
                    <h5>مقارنة البيانات:</h5>
                    <field name="comparison_info" nolabel="1" readonly="1"/>
                </div>

                <group string="الإجراء المطلوب">
                    <field name="action" widget="radio"/>
                    <field name="update_student_data"
                           invisible="action != 'link'"
                           help="سيتم تحديث جميع بيانات الطالب بالبيانات الجديدة من الطلب"/>
                </group>

                <footer>
                    <button name="action_confirm"
                            string="تأكيد"
                            type="object"
                            class="btn-primary"
                            invisible="action == 'cancel'"/>
                    <button string="إلغاء"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action for the wizard -->
    <record id="action_enrollment_link_wizard" model="ir.actions.act_window">
        <field name="name">ربط الطلب بطالب موجود</field>
        <field name="res_model">quran.enrollment.link.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>