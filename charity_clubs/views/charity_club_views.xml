<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="view_charity_club_list" model="ir.ui.view">
        <field name="name">charity.club.list</field>
        <field name="model">charity.club</field>
        <field name="arch" type="xml">
            <list string="النوادي" decoration-muted="not active">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="manager_id" widget="many2one_avatar_user"/>
                <field name="program_count" string="البرامج"/>
                <field name="active_program_count" string="البرامج النشطة"/>
                <field name="total_registrations" string="التسجيلات"/>
                <field name="active" invisible="1"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_charity_club_form" model="ir.ui.view">
        <field name="name">charity.club.form</field>
        <field name="model">charity.club</field>
        <field name="arch" type="xml">
            <form string="نادي">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_programs" type="object"
                                class="oe_stat_button" icon="fa-graduation-cap">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="active_program_count"/> / <field name="program_count"/>
                                </span>
                                <span class="o_stat_text">البرامج</span>
                            </div>
                        </button>
                        <button name="action_view_registrations" type="object"
                                class="oe_stat_button" icon="fa-users">
                            <field name="total_registrations" widget="statinfo" string="التسجيلات"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="غير نشط" bg_color="bg-danger"
                            invisible="active"/>
                    <field name="image" widget="image" class="oe_avatar" options="{'preview_image': 'image'}"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="اسم النادي" required="1"/>
                        </h1>
                    </div>

                    <group>
                        <group string="معلومات عامة">
                            <field name="manager_id" widget="many2one_avatar_user"/>
                            <field name="active" invisible="1"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group string="معلومات الاتصال">
                            <field name="phone" widget="phone"/>
                            <field name="mobile" widget="phone"/>
                            <field name="email" widget="email"/>
                            <field name="website" widget="url" placeholder="https://www.example.com"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="الوصف والرؤية" name="description">
                            <group>
                                <field name="description" placeholder="وصف مختصر عن النادي وأنشطته..."/>
                                <field name="vision" placeholder="رؤية النادي وأهدافه طويلة المدى..."/>
                            </group>
                        </page>

                        <page string="العنوان" name="address">
                            <group>
                                <group>
                                    <field name="street" placeholder="الشارع..."/>
                                    <field name="street2" placeholder="الشارع 2..."/>
                                    <field name="city" placeholder="المدينة"/>
                                </group>
                                <group>
                                    <field name="state_id" options="{'no_create': True}"
                                           domain="[('country_id', '=', country_id)]"
                                           placeholder="الإمارة"/>
                                    <field name="zip" placeholder="الرمز البريدي"/>
                                    <field name="country_id" options="{'no_create': True}"/>
                                </group>
                            </group>
                        </page>

                        <page string="البرامج" name="programs">
                            <field name="program_ids" mode="list"
                                   context="{'default_club_id': id}">
                                <list string="البرامج" editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="schedule_display"/>
                                    <field name="age_from"/>
                                    <field name="age_to"/>
                                    <field name="registration_count" string="المسجلين"/>
                                    <field name="available_seats" string="المقاعد المتاحة"/>
                                    <field name="state" widget="badge"
                                           decoration-success="state == 'open'"
                                           decoration-info="state == 'ongoing'"
                                           decoration-muted="state in ('done', 'cancelled')"/>
                                    <field name="active" invisible="1"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_charity_club_kanban" model="ir.ui.view">
        <field name="name">charity.club.kanban</field>
        <field name="model">charity.club</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_dashboard" sample="1">
                <field name="id"/>
                <field name="name"/>
                <field name="color"/>
                <field name="image"/>
                <field name="description"/>
                <field name="program_count"/>
                <field name="active_program_count"/>
                <field name="total_registrations"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''} oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <field name="name"/>
                                    </div>
                                    <div class="o_secondary text-muted">
                                        <field name="description" widget="text"/>
                                    </div>
                                </div>
                                <div class="o_kanban_manage_button_section">
                                    <a class="o_kanban_manage_toggle_button" href="#"><i class="fa fa-ellipsis-v" aria-label="Manage" title="Manage"/></a>
                                </div>
                            </div>
                            <div class="container o_kanban_card_content">
                                <div class="row">
                                    <div class="col-6 o_kanban_primary_left">
                                        <button class="btn btn-primary"
                                                name="action_view_programs"
                                                type="object">
                                            <span><field name="active_program_count"/> / <field name="program_count"/> برنامج</span>
                                        </button>
                                    </div>
                                    <div class="col-6 o_kanban_primary_right">
                                        <div class="mb-2">
                                            <i class="fa fa-users me-1" title="التسجيلات"/>
                                            <span><field name="total_registrations"/> تسجيل</span>
                                        </div>
                                    </div>
                                </div>
                                <div t-if="record.image.raw_value" class="o_kanban_image">
                                    <img t-att-src="kanban_image('charity.club', 'image', record.id.raw_value)"
                                         alt="Club Image" width="100"/>
                                </div>
                            </div>
                            <div class="o_kanban_manage_view">
                                <div>
                                    <a type="edit">تعديل</a>
                                </div>
                                <div>
                                    <a type="delete">حذف</a>
                                </div>
                                <ul class="oe_kanban_colorpicker" data-field="color"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_charity_club_search" model="ir.ui.view">
        <field name="name">charity.club.search</field>
        <field name="model">charity.club</field>
        <field name="arch" type="xml">
            <search string="البحث في النوادي">
                <field name="name" string="النادي"/>
                <field name="manager_id"/>
                <field name="city"/>
                <filter string="نشط" name="active" domain="[('active', '=', True)]"/>
                <filter string="غير نشط" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="لديه برامج نشطة" name="has_active_programs"
                        domain="[('active_program_count', '>', 0)]"/>
                <filter string="بدون برامج" name="no_programs"
                        domain="[('program_count', '=', 0)]"/>
                <group expand="0" string="تجميع حسب">
                    <filter string="المدير" name="group_manager" context="{'group_by': 'manager_id'}"/>
                    <filter string="المدينة" name="group_city" context="{'group_by': 'city'}"/>
                    <filter string="الحالة" name="group_active" context="{'group_by': 'active'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_charity_club" model="ir.actions.act_window">
        <field name="name">النوادي</field>
        <field name="res_model">charity.club</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="view_charity_club_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                إنشاء أول نادي
            </p>
            <p>
                قم بإنشاء النوادي التابعة للجمعية الخيرية وإدارة برامجها التعليمية
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_charity_root"
              name="النوادي الخيرية"
              sequence="10"
              web_icon="charity_clubs,static/description/icon.png"/>

    <menuitem id="menu_charity_clubs"
              name="النوادي"
              parent="menu_charity_root"
              action="action_charity_club"
              sequence="10"/>
</odoo>