<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Module Category -->
    <record id="module_category_charity_clubs" model="ir.module.category">
        <field name="name">النوادي الخيرية</field>
        <field name="description">إدارة النوادي والبرامج التعليمية</field>
        <field name="sequence">10</field>
    </record>

    <!-- Groups -->
    <record id="group_charity_user" model="res.groups">
        <field name="name">موظف</field>
        <field name="category_id" ref="module_category_charity_clubs"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="comment">يمكنه عرض النوادي والبرامج وإدارة التسجيلات</field>
    </record>

    <record id="group_charity_manager" model="res.groups">
        <field name="name">مدير نادي</field>
        <field name="category_id" ref="module_category_charity_clubs"/>
        <field name="implied_ids" eval="[(4, ref('group_charity_user'))]"/>
        <field name="comment">يمكنه إدارة البرامج وتأكيد التسجيلات</field>
    </record>

    <record id="group_charity_admin" model="res.groups">
        <field name="name">مدير النظام</field>
        <field name="category_id" ref="module_category_charity_clubs"/>
        <field name="implied_ids" eval="[(4, ref('group_charity_manager'))]"/>
        <field name="comment">صلاحيات كاملة على النظام</field>
    </record>

    <!-- Record Rules -->
    <!-- قاعدة لتقييد المدير على نواديه فقط -->
    <record id="rule_charity_club_manager" model="ir.rule">
        <field name="name">مدير النادي: نواديه فقط</field>
        <field name="model_id" ref="model_charity_club"/>
        <field name="domain_force">[('manager_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_charity_manager'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
    </record>

    <!-- قاعدة للمدير العام - يرى كل شيء -->
    <record id="rule_charity_club_admin" model="ir.rule">
        <field name="name">المدير العام: كل النوادي</field>
        <field name="model_id" ref="model_charity_club"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_charity_admin'))]"/>
    </record>

    <!-- قاعدة للبرامج - المدير يرى برامج نواديه فقط -->
    <record id="rule_club_program_manager" model="ir.rule">
        <field name="name">مدير النادي: برامج نواديه</field>
        <field name="model_id" ref="model_club_program"/>
        <field name="domain_force">[('club_id.manager_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_charity_manager'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

    <!-- قاعدة للتسجيلات - المدير يرى تسجيلات نواديه -->
    <record id="rule_program_registration_manager" model="ir.rule">
        <field name="name">مدير النادي: تسجيلات نواديه</field>
        <field name="model_id" ref="model_program_registration"/>
        <field name="domain_force">[('club_id.manager_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_charity_manager'))]"/>
    </record>

    <!-- Multi-company Rules -->
    <record id="rule_charity_club_company" model="ir.rule">
        <field name="name">النوادي: قاعدة الشركة</field>
        <field name="model_id" ref="model_charity_club"/>
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
    </record>

    <record id="rule_program_registration_company" model="ir.rule">
        <field name="name">التسجيلات: قاعدة الشركة</field>
        <field name="model_id" ref="model_program_registration"/>
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
    </record>
</odoo>