<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Custom Header/Navbar -->
        <template id="custom_header" inherit_id="website.layout" name="Swimming Club Header">
            <xpath expr="//header" position="replace">
                <header class="swimming-header">
                    <nav class="navbar navbar-expand-lg swimming-navbar">
                        <div class="container">
                            <!-- Logo -->
                            <a class="navbar-brand swimming-logo" href="/">
                                <i class="fa fa-trophy"></i>
                                <span class="logo-text">الرياضي BLUE OCEAN نادي </span>
                            </a>

                            <!-- Mobile Toggle -->
                            <button class="navbar-toggler custom-toggler" type="button" data-toggle="collapse" data-target="#navbarContent">
                                <span class="navbar-toggler-icon"></span>
                            </button>

                            <!-- Navigation Items -->
                            <div class="collapse navbar-collapse" id="navbarContent">
                                <ul class="navbar-nav mx-auto">
                                    <li class="nav-item">
                                        <a class="nav-link swimming-nav-link" href="/">
                                            <i class="fa fa-home"></i> الرئيسية
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link swimming-nav-link" href="/game-booking">
                                            <i class="fa fa-calendar-check"></i> احجز الآن
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link swimming-nav-link" href="#features">
                                            <i class="fa fa-star"></i> مميزاتنا
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link swimming-nav-link" href="#contact">
                                            <i class="fa fa-phone"></i> اتصل بنا
                                        </a>
                                    </li>
                                </ul>

                                <!-- CTA Button -->
                                <div class="navbar-cta">
                                    <a href="/game-booking" class="btn btn-swimming-cta">
                                        <i class="fa fa-running"></i> ابدأ التدريب
                                    </a>
                                </div>

                                <!-- Login/User Menu -->
                                <div class="navbar-user ml-3">
                                    <t t-if="not request.env.user._is_public()">
                                        <!-- Logged in user -->
                                        <div class="dropdown">
                                            <a class="btn btn-user-menu dropdown-toggle" href="#" data-toggle="dropdown">
                                                <i class="fa fa-user-circle"></i>
                                                <span t-esc="request.env.user.name"/>
                                            </a>
                                            <div class="dropdown-menu dropdown-menu-right">
                                                <a class="dropdown-item" href="/my">
                                                    <i class="fa fa-user"></i> حسابي
                                                </a>
                                                <a class="dropdown-item" href="/my/home">
                                                    <i class="fa fa-dashboard"></i> لوحة التحكم
                                                </a>
                                                <div class="dropdown-divider"></div>
                                                <a class="dropdown-item" href="/web/session/logout">
                                                    <i class="fa fa-sign-out-alt"></i> تسجيل الخروج
                                                </a>
                                            </div>
                                        </div>
                                    </t>
                                    <t t-else="">
                                        <!-- Not logged in -->
                                        <a href="/web/login" class="btn btn-login">
                                            <i class="fa fa-sign-in-alt"></i> تسجيل الدخول
                                        </a>
                                    </t>
                                </div>
                            </div>
                        </div>
                    </nav>

                    <!-- Animated Wave Effect -->
                    <div class="header-wave">
                        <svg viewBox="0 0 1440 60" preserveAspectRatio="none">
                            <path d="M0,20 C150,60 350,0 600,30 C850,60 1050,0 1200,20 C1350,40 1440,30 1440,30 L1440,60 L0,60 Z" fill="url(#gradient)"></path>
                            <defs>
                                <linearGradient id="gradient" x1="0%" y1="0%" x2="100%" y2="0%">
                                    <stop offset="0%" style="stop-color:#ff6b35;stop-opacity:0.3" />
                                    <stop offset="50%" style="stop-color:#ffd700;stop-opacity:0.3" />
                                    <stop offset="100%" style="stop-color:#ff6b35;stop-opacity:0.3" />
                                </linearGradient>
                            </defs>
                        </svg>
                    </div>
                </header>
            </xpath>
        </template>

        <!-- Homepage Template -->
        <template id="game_booking_homepage" name="Sports Booking Homepage">
            <t t-call="website.layout">
                <t t-set="title">الرياضي - احجز الآن BLUE OCEAN نادي </t>

                <!-- Hero Section -->
                <section class="sport-hero-section">
                    <div class="hero-overlay"></div>
                    <div class="hero-content">
                        <div class="container">
                            <div class="row">
                                <div class="col-12 text-center">
                                    <h1 class="hero-main-title animate-title">
                                        <span class="highlight">كن بطلاً</span> في رياضتك المفضلة
                                    </h1>
                                    <p class="hero-description animate-subtitle">
                                        نادي رياضي متكامل يضم جميع الألعاب - كرة قدم، سباحة، كاراتيه وأكثر
                                    </p>
                                    <div class="hero-buttons animate-buttons">
                                        <a href="/game-booking" class="btn btn-hero-primary">
                                            <i class="fa fa-calendar-check"></i> احجز الآن
                                        </a>
                                        <a href="#features" class="btn btn-hero-secondary">
                                            <i class="fa fa-info-circle"></i> اعرف المزيد
                                        </a>
                                    </div>
                                    <div class="hero-stats">
                                        <div class="stat-item">
                                            <span class="stat-number" data-count="3000">0</span>+
                                            <span class="stat-label">لاعب مسجل</span>
                                        </div>
                                        <div class="stat-item">
                                            <span class="stat-number" data-count="15">0</span>+
                                            <span class="stat-label">رياضة مختلفة</span>
                                        </div>
                                        <div class="stat-item">
                                            <span class="stat-number" data-count="25">0</span>+
                                            <span class="stat-label">مدرب محترف</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="hero-shape">
                        <svg viewBox="0 0 1440 200" preserveAspectRatio="none">
                            <path fill="#ffffff" fill-opacity="1" d="M0,100L48,106.7C96,113,192,127,288,130C384,133,480,127,576,110C672,93,768,67,864,73.3C960,80,1056,120,1152,126.7C1248,133,1344,107,1392,93.3L1440,80L1440,200L1392,200C1344,200,1248,200,1152,200C1056,200,960,200,864,200C768,200,672,200,576,200C480,200,384,200,288,200C192,200,96,200,48,200L0,200Z"></path>
                        </svg>
                    </div>
                </section>

                <!-- Features Section -->
                <section id="features" class="features-section py-5">
                    <div class="container">
                        <div class="section-header text-center mb-5">
                            <h2 class="section-title">؟ BLUE OCEAN لماذا نادى</h2>
                            <p class="section-subtitle">نوفر لك تجربة رياضية متكاملة تحت سقف واحد</p>
                        </div>
                        <div class="row">
                            <div class="col-lg-4 col-md-6 mb-4">
                                <div class="feature-card">
                                    <div class="feature-icon">
                                        <i class="fa fa-users"></i>
                                    </div>
                                    <h3>تنوع رياضي كامل</h3>
                                    <p>أكثر من 15 رياضة مختلفة تحت سقف واحد</p>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-6 mb-4">
                                <div class="feature-card">
                                    <div class="feature-icon">
                                        <i class="fa fa-medal"></i>
                                    </div>
                                    <h3>مدربون معتمدون</h3>
                                    <p>نخبة من المدربين المحترفين في جميع الألعاب</p>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-6 mb-4">
                                <div class="feature-card">
                                    <div class="feature-icon">
                                        <i class="fa fa-dumbbell"></i>
                                    </div>
                                    <h3>معدات احترافية</h3>
                                    <p>أحدث المعدات والملاعب بمواصفات عالمية</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Sports Section -->
                <section class="sports-section py-5">
                    <div class="container">
                        <div class="section-header text-center mb-5">
                            <h2 class="section-title">الرياضات المتاحة</h2>
                            <p class="section-subtitle">اختر من بين مجموعة واسعة من الألعاب الرياضية</p>
                        </div>
                        <div class="sports-grid">
                            <div class="sport-item" data-sport="football">
                                <div class="sport-icon">
                                    <i class="fa fa-futbol"></i>
                                </div>
                                <h4>كرة القدم</h4>
                                <p>ملاعب عشبية بأحجام مختلفة</p>
                            </div>
                            <div class="sport-item" data-sport="swimming">
                                <div class="sport-icon">
                                    <i class="fa fa-swimmer"></i>
                                </div>
                                <h4>السباحة</h4>
                                <p>أحواض أولمبية وتدريبية</p>
                            </div>
                            <div class="sport-item" data-sport="karate">
                                <div class="sport-icon">
                                    <i class="fa fa-fist-raised"></i>
                                </div>
                                <h4>الكاراتيه</h4>
                                <p>صالات مجهزة للفنون القتالية</p>
                            </div>
                            <div class="sport-item" data-sport="basketball">
                                <div class="sport-icon">
                                    <i class="fa fa-basketball-ball"></i>
                                </div>
                                <h4>كرة السلة</h4>
                                <p>ملاعب داخلية مكيفة</p>
                            </div>

                        </div>
                    </div>
                </section>

                <!-- CTA Section -->
                <section class="cta-section">
                    <div class="container">
                        <div class="cta-content text-center">
                            <h2>مستعد للتحدي؟</h2>
                            <p> وابدأ رحلتك الرياضية BLUE OCEAN إنضم الى نادى</p>
                            <a href="/game-booking" class="btn btn-cta">
                                <i class="fa fa-play-circle"></i> ابدأ الحجز
                            </a>
                        </div>
                    </div>
                </section>

                <!-- Contact Section -->
                <section id="contact" class="contact-section py-5">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-4 mb-4">
                                <div class="contact-item">
                                    <i class="fa fa-map-marker-alt"></i>
                                    <h4>موقعنا</h4>
                                    <p>مدينه خميس مشيط شارع الستين مقابل بنك الراجحي المملكة العربية السعودية </p>
                                </div>
                            </div>
                            <div class="col-lg-4 mb-4">
                                <div class="contact-item">
                                    <i class="fa fa-phone"></i>
                                    <h4>اتصل بنا</h4>
                                    <p dir="ltr">+966 59 061 0836</p>
                                </div>
                            </div>
                            <div class="col-lg-4 mb-4">
                                <div class="contact-item">
                                    <i class="fa fa-envelope"></i>
                                    <h4>راسلنا</h4>
                                    <p>BlueOcean.sports10@gmail.com</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </t>
        </template>

        <!-- Custom Footer -->
        <template id="custom_footer" inherit_id="website.layout" name="Swimming Club Footer">
            <xpath expr="//footer" position="replace">
                <footer class="swimming-footer">
                    <div class="footer-wave">
                        <svg viewBox="0 0 1440 120" preserveAspectRatio="none">
                            <path d="M0,60 C150,20 350,80 600,50 C850,20 1050,80 1200,60 C1350,40 1440,50 1440,50 L1440,0 L0,0 Z" fill="white"></path>
                        </svg>
                    </div>
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-4 mb-4">
                                <div class="footer-brand">
                                    <i class="fa fa-trophy"></i>
                                    <h3>الرياضي BLUE OCEAN نادي </h3>
                                    <p>نادي رياضي متكامل يقدم تجربة رياضية شاملة لجميع أفراد العائلة.</p>
                                </div>
                            </div>
                            <div class="col-lg-4 mb-4">
                                <h4>روابط سريعة</h4>
                                <ul class="footer-links">
                                    <li><a href="/"><i class="fa fa-angle-left"></i> الرئيسية</a></li>
                                    <li><a href="/game-booking"><i class="fa fa-angle-left"></i> احجز الآن</a></li>
                                    <li><a href="#features"><i class="fa fa-angle-left"></i> مميزاتنا</a></li>
                                    <li><a href="#contact"><i class="fa fa-angle-left"></i> اتصل بنا</a></li>
                                </ul>
                            </div>
                            <div class="col-lg-4 mb-4">
                                <h4>تابعنا</h4>
                                <div class="social-links">
                                    <a href="#" class="social-link"><i class="fab fa-facebook-f"></i></a>
                                    <a href="#" class="social-link"><i class="fab fa-twitter"></i></a>
                                    <a href="#" class="social-link"><i class="fab fa-instagram"></i></a>
                                    <a href="#" class="social-link"><i class="fab fa-youtube"></i></a>
                                </div>
                                <div class="footer-contact mt-3">
                                    <p><i class="fa fa-phone"></i> +966 59 061 0836</p>
                                    <p><i class="fa fa-envelope"></i> BlueOcean.sports10@gmail.com</p>
                                </div>
                            </div>
                        </div>
                        <hr class="footer-divider"/>
                        <div class="footer-bottom">
                            <p>© 2025 الرياضي . جميع الحقوق محفوظة BLUE OCEAN نادي .</p>
                        </div>
                    </div>
                </footer>
            </xpath>
        </template>
    </data>
</odoo>