<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="acquirer_form_ngenius" model="ir.ui.view">
        <field name="name">acquirer.form.ngenius</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <xpath expr='//group[@name="provider_credentials"]' position='after'>
                <field name="code" invisible="1"/>
                <group invisible="code != 'ngenius'">
                    <field name="ngenius_api_key"/>
                    <field name="ngenius_reference"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
